CREATE INDEX Mname_index ON kelas(molemName);
SELECT molemName FROM kelas WHERE (avg>=12) AND (TRUE);
SELECT molemName,tedad FROM kelas WHERE (avg>=15) OR (tedad>=50);
UPDATE kelas SET tedad=0 WHERE molemName="abtahi";
SELECT molemName,tedad FROM kelas WHERE (avg<15) OR (tedad<=20);
DELETE FROM kelas WHERE molemName="abtahi";
SELECT molemName,tedad,avg FROM kelas WHERE (avg<15) OR (tedad<=20);