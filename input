CREATE TABLE adam(name VARCHAR,famil VARCHAR,sen INT,ghad INT,shomare VARCHAR,nomre INT);
CREATE TABLE madrese(name VARCHAR,kelasName VARCHAR);
CREATE TABLE kelas(name VARCHAR,tedad INT,molemName VARCHAR,avg INT);
CREATE INDEX shomare_index ON adam(shomare);
CREATE INDEX nomre_index ON adam(nomre);
